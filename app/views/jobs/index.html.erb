<%- model_class = Job -%>
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="span9">
                <h1>Coaching Jobs</h1>
                <span class="pg-title-sub">Find a job that fits you </span><br>
                

            </div>
            <% if user_signed_in? %>
            <div class="span3 pull-right" style="padding-top: 30px;">
              <h3 class="header_line" style="text-align:center"><span>Post A New Job »<br> <a href="/jobs/new">New Job Posting</a></h3>
            </div>
            <% else %>
            <div class="span3 pull-right" style="padding-top: 30px;">
              <h3 class="header_line" style="text-align:center"><span>Post A New Job »<br> <a href="/users/sign_in">New Job Posting</a></h3>
            </div>
            <% end %>
        </div>
    </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="span3">
        <aside class="left">
            <div class="sidebar-widget">
              <div class="divider divider10"><span>Search Menu</span></div>
                <ul class="sidebar-menu sidebar-menu-arrow">
                  Search Jobs by Sport
                    <%= form_tag jobs_path, :class => 'form-horizontal', method: :get do %>
                     <p>
                       <%= text_field_tag :job_query, params[:job_query], :placeholder => 'Enter sport ...', :autocomplete => 'on', :type => 'text', :class=> 'input-small' %>

                     </p>
                  Search Jobs by Location
                   
                     <p>
                       <%= text_field_tag :job_search, params[:job_search], :placeholder => 'Enter zip code ...', :autocomplete => 'on', :type => 'text', :class=> 'input-small' %>

                     </p>
                    Search Jobs by Distance from Location
                      
                       <p>
                         <%= text_field_tag :job_distance_search, params[:job_distance_search], :placeholder => '50 miles ...', :autocomplete => 'on', :type => 'text', :class=> 'input-small' %><br><br>

                         <%= submit_tag "Search", name: nil, :class => 'btn btn-primary' %>
                       </p>
                      <% end %>
                    <div class="divider divider10"><span></span></div>
                </ul>
            </div>                    
        </aside>
      </div>

      <div class="span9">
        <h2>Job Board</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @jobs.each do |job| %>
            
            <tr>
              <td> <span class="label label-warning">New</span> </td>
              <td><strong><a href="/jobs/<%= job.id %>"data-toggle="tooltip" title="<%= job.job_description[0..50] %>...">
                <h3><%= job.job_title %></h3></strong>


                Sport - <%= job.job_sport %></a>
              </td>
              <td><%= job.job_city %>, <%= job.job_state %></td>
              <td>posted <%= time_ago_in_words(job.created_at) %> ago</td>
            </tr>
            <% end %>
          </tbody>
        </table>
       
      </div>
    <div>
  </div>
</section>
<div id="pre-footer">
</div>



