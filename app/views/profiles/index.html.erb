<%- model_class = Profile -%>
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="span9">
                <h1>Coach Profiles</h1>
                <span class="pg-title-sub">Find a coach today! </span><br>
            </div>
            <% if user_signed_in? %>
            <div class="span3 pull-right" style="padding-top: 30px;">
              <h3 class="header_line" style="text-align:center"><span>Coaches create a profile here » <br><a href="/profiles/new">Create Profile</a></h3>
            </div>
            <% else %>
            <div class="span3 pull-right" style="padding-top: 30px;">
              <h3 class="header_line" style="text-align:center"><span>Coaches create an account here » <br><a href="/users/sign_in">Create Profile</a></h3>
            </div>
            <% end %>
        </div>
    </div>
</section>

<section>
<div class="container">
