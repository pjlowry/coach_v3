              <ul class="sidebar-menu sidebar-menu-arrow">
                  Search by Sport
                    <%= form_tag profiles_path, :class => 'form-horizontal', method: :get do %>
                     <p>
                       <%= text_field_tag :query, params[:query], :placeholder => 'Enter sport ...', :autocomplete => 'on', :type => 'text', :class=> 'input-small' %>

                     </p>
                  Search by Location
                   
                     <p>
                       <%= text_field_tag :search, params[:search], :placeholder => 'Enter zip code ...', :autocomplete => 'on', :type => 'text', :class=> 'input-small' %>

                     </p>
                    Search by Distance from Location
                      
                       <p>
                         <%= text_field_tag :distance_search, params[:distance_search], :placeholder => '50 miles ...', :autocomplete => 'on', :type => 'text', :class=> 'input-small' %><br><br>

                         <%= submit_tag "Search", name: nil, :class => 'btn btn-primary' %>
                       </p>
                      <% end %>
              </ul>
          </div>                    
      </aside><br>

